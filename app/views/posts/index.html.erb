<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-3 col-xs-4">
        <%= link_to post do %>
          <img src="https://assets.entrepreneur.com/content/3x2/274/20160113181342-marcos-pizza.jpeg" style="width: 100%;">
        <% end %>
      </div>
      <div class="col-sm-6 col-xs-8">
        <div class="categorie">
          <%= link_to post do %>
            <%= post.categorie %>
          <% end %>
        </div>
        <div class="title">
          <%= link_to post do %>
            <%= post.title %>
          <% end %>
        </div>
        <div class="sneakpeak">
          <%= post.sneakpeak %>
        </div>
        <div class="sneakpeak">
          Created <%= time_ago_in_words(Date.today - 1) %> ago
        </div>
      </div>
        <div class="col-sm-9">
          <hr>
        </div>
    <% end %>
  </div>
</div>