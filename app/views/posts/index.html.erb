<div class="container">
  <div class="row">
    <div class="col-sm-9 col-xs-12">
      <% @posts.each do |post| %>
        <div class="row">
          <div class="col-sm-3">
            <%= link_to post do %>
              <img src="<%= post.image %>" style="width: 100%;">
            <% end %>
          </div>
          <div class="col-sm-9">
            <div class="categorie">
              <%= link_to post do %>
                <%= post.categorie %>
              <% end %>
            </div>
            <div class="title">
              <%= link_to post do %>
                <%= post.title %>
              <% end %>
            </div>
            <div class="sneakpeak">
              <%= post.sneakpeak %>
            </div>
            <div class="sneakpeak">
              Created <%= time_ago_in_words(Date.today - 1) %> ago
            </div>
          </div>
        </div>
        <div class="col-sm-12">
          <hr>
        </div>
      <% end %>
    </div>
    <div class="col-sm-3 col-xs-hidden">
      <div class="cta-right-blog">
        <h2 class="title">The Painless Guide To Building Great Software</h1>
        <button class="btn btn-primary btn-block">Get The Free Guide</button>
      </div>
    </div>
  </div>
</div>
<div class="center">
  <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>